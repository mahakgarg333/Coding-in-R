#if else loop 
a <- 100 
b <- 200 
if(b>a){
    print("B is greater than A")
}else{
    print("B is not greater than A")
}

#for loop 
week <- c('Sunday', 'Monday', 'Tuesday', 'Wednesday', 'Thursday', 'Friday', 'Saturday')
for(day in week)
{
    print(day)
}

#While loop 
val = 1
while(val<5){
    print(val)
    val = val+1
}



#factorial 
n<-5 
factorial <- 1 
i <- 1 
while(i<=n){
    factorial = factorial*i 
    i = i+1 
}
print(factorial)


#Repeat Loop 
val =1 
repeat{
    print(val)
    val = val + 1 
    if(val>5){
        break
    }
}

