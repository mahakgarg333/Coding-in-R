#for loop 
#break keyword 
for(val in 1:5)
{
    if(val == 30)
    {
        break
    }
    print(val)
}


#for loop 
#next keyword 

for(val in 1:10)
{
    if(val == 5)
    {
        next
    }
    print(val)
}
