#Class Data Types 
#numeric 
x <- 10.5 
class(x)

#integer 
x <- 1000L 
class(x)

#complex 
x <- 9i+3
class(x)

#R numbers - numeric, integer, complex

x<-10.5 
y<-10L
z<- 1i
x 
y 
z
class(x)
class(y)
class(z)
as.numeric(z)
as.integer(x)
as.complex(y)
class(x)
class(y)
class(z)

